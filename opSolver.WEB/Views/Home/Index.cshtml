
@{
    ViewBag.Title = "Home Page";
}

<header>
    <div class="container">
        <div class="row justify-content-center">
            <div class="text-center">
                @if (Request.Cookies["userName"] == null || Request.Cookies["userName"].Value == null)
                {
                    <h1>@lang.Resource.Introduce</h1>
                    <h4>@lang.Resource.forStatistic</h4>

                }
                else
                {
                    <h1>
                        @(lang.Resource.Welcome + "," + Request.Cookies["userName"].Value)
                    </h1>
                    <h4>
                        @(lang.Resource.NotYourName + " " + lang.Resource.Introduce)
                    </h4>
                }
            </div>
            @*<div class="w-100"></div>
