
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
   
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="page-preloader" class="preloader">
        <div class="loader">
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top justify-content-center">
        <ul class="nav">
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Methods
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @Html.ActionLink("Simplex", "Simplex", "Home", new { @class = "dropdown-item" })
                    <a href="@Url.Action("Genetic","Home")" class="dropdown-item">Genetic<span class="beta">Beta</span></a>
                </div>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index","Home")" class="navbar-brand nav-link" style="color:#ff6a00;">
                    OPSolver
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link disabled">Statistics</a>
            </li>
        </ul>

        <ul class="nav right-bar">
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Identity.Name
                </a>
                <div class="dropdown-menu" aria-labelledby="userDropdown">
                    <a href="@Url.Action("Logout","Account")" class="dropdown-item">Logout</a>
                </div>
            </li>
            <li class="nav-item">
                <p class="nav-link vLine">|</p>
            </li>
           
            <li class="nav-item">
                @using (Html.BeginForm("ChangeCulture", "Home"))
                {
                    <select onchange="this.form.submit()" class="custom-select-lg select-ops" name="lang">
                        <option disabled selected>@lang.Resource.lang</option>
                        <option value="ru">RU</option>
                        <option value="en">EN</option>
                    </select>
                }
            </li>
     
     
        </ul>
    </nav>


    <main>
        @RenderBody()
    </main>
  


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/script")
    @RenderSection("scripts", required: false)
</body>
</html>
